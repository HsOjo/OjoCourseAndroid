<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hsojo.ojocourse.MainActivity">

    <GridView
        android:id="@+id/gvDate"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:numColumns="8" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="8">

            <com.hsojo.ojocourse.views.MyListView
                android:id="@+id/lvNum"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:divider="@null">

            </com.hsojo.ojocourse.views.MyListView>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7">

                <com.hsojo.ojocourse.views.MyGridView
                    android:id="@+id/gvContent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:horizontalSpacing="0dp"
                    android:numColumns="7"
                    android:scrollbars="none"
                    android:verticalSpacing="0dp">

                </com.hsojo.ojocourse.views.MyGridView>

                <com.hsojo.ojocourse.views.MySchedule
                    android:id="@+id/mySchedule"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </com.hsojo.ojocourse.views.MySchedule>
            </FrameLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
